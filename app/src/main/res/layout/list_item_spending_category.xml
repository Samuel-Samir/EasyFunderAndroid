<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spending_category_name"
            android:text="Fast food"
            android:textSize="25dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_weight="1"
            android:textColor="@color/charity_heading_title"/>
        <Button
            android:id="@+id/spending_category_use"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:textSize="15sp"
            android:layout_weight="0"
            android:background="@color/green"
            android:textColor="@color/white"
            android:text="use"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/spending_category_my_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:id="@+id/spending_category_amount"
                android:textColor="@color/green"
                android:text="20$"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItemSmall" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/spending_category_percentage"
                android:textSize="15sp"
                android:textColor="@color/orange"
                android:text="2.0%"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItemSmall" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>